<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgplanth"
        tools:context=".HomepgActivity">

        <include
            android:id="@+id/sideMenu"
            layout="@layout/layout_side_menu"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <!-- ðŸ”™ Back Button -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- ðŸ” Top Right Icons Row -->
        <LinearLayout
            android:id="@+id/topIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ðŸ” Hamburger Menu -->
            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/hamburger_menu"
                android:padding="6dp"
                tools:ignore="ContentDescription" />

            <!-- ðŸ”” Notification Icon -->
            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/notifications"
                android:layout_marginStart="12dp"
                tools:ignore="ContentDescription" />

            <!-- ðŸ‘¤ Profile Icon -->
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/profile"
                android:layout_marginStart="12dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <!-- ðŸŒ± Plant Name / Rosie Label -->
        <Button
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:alpha="0.5"
            android:background="@android:color/darker_gray"
            android:text="Rosie Here"
            android:textColor="#4E342E"
            app:layout_constraintTop_toBottomOf="@id/ivBack" />

        <!-- ðŸ”¹ First Row (Soil Moisture 1 & 2) -->
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/name">

            <!-- Soil Moisture 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <com.example.plantpall.SpeedometerView
                    android:id="@+id/gauge1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/tvMoist1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soil Moisture 1: --%"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Soil Moisture 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <com.example.plantpall.SpeedometerView
                    android:id="@+id/gauge2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/tvMoist2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soil Moisture 2: --%"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ”¹ Second Row (Temperature) -->
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/row1">

            <com.example.plantpall.SpeedometerView
                android:id="@+id/gauge3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/tvSoilTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil Temp: --Â°C"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- ðŸŒž UV Index -->
        <TextView
            android:id="@+id/tvUV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UV Index: --"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/row2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ðŸŒ¦ï¸ Weather Section -->
        <LinearLayout
            android:id="@+id/weatherSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvUV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/weatherConditionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather Condition"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingBottom="8dp"
                android:gravity="center" />

            <!-- ðŸŒ¤ï¸ Weather Info Grid -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:background="@android:color/transparent"
                android:elevation="8dp"
                android:gravity="center">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="3"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:padding="8dp"
                    android:columnOrderPreserved="true">

                    <!-- City -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/pin" />

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp" />
                    </LinearLayout>

                    <!-- Condition -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/condition" />

                        <TextView
                            android:id="@+id/condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Condition"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp" />
                    </LinearLayout>

                    <!-- Temperature -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/temp" />

                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp" />
                    </LinearLayout>

                    <!-- Wind -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/wind" />

                        <TextView
                            android:id="@+id/wind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp" />
                    </LinearLayout>

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/humidity" />

                        <TextView
                            android:id="@+id/humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp" />
                    </LinearLayout>

                    <!-- Visibility -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/visibility" />

                        <TextView
                            android:id="@+id/visibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visibility"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp" />
                    </LinearLayout>

                </GridLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
