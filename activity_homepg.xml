<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgplant"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivprofile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/profile"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBack"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rosie"
            android:textSize="40sp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/ivprofile"
            app:layout_constraintTop_toTopOf="@id/ivprofile"
            app:layout_constraintBottom_toBottomOf="@id/ivprofile"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:alpha="0.5"
            android:background="@android:color/darker_gray"
            android:text="Rosie Here"
            android:textColor="#4E342E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivprofile" />

        <!-- Block 1: Soil Moisture 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/block1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@android:color/darker_gray"
            android:alpha="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/block2"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.25">

            <com.example.plantpall.SpeedometerView
                android:id="@+id/gauge1"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <TextView
                android:id="@+id/progressText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil Moisture 1"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_gravity="bottom|center_horizontal"/>
        </androidx.cardview.widget.CardView>

        <!-- Block 2: Soil Moisture 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/block2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@android:color/darker_gray"
            android:alpha="0.5"
            app:layout_constraintStart_toEndOf="@id/block1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.25">

            <com.example.plantpall.SpeedometerView
                android:id="@+id/gauge2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:ignore="MissingClass" />
            <TextView
                android:id="@+id/progressText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil Moisture 2"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_gravity="bottom|center_horizontal"/>
        </androidx.cardview.widget.CardView>

        <!-- Block 3: Temperature -->
        <androidx.cardview.widget.CardView
            android:id="@+id/block3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@android:color/darker_gray"
            android:alpha="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/block4"
            app:layout_constraintTop_toBottomOf="@id/block1"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.25">

            <com.example.plantpall.SpeedometerView
                android:id="@+id/gauge3"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/progressText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_gravity="bottom|center_horizontal"/>
        </androidx.cardview.widget.CardView>

        <!-- Block 4: UV Index -->
        <androidx.cardview.widget.CardView
            android:id="@+id/block4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@android:color/darker_gray"
            android:alpha="0.5"
            app:layout_constraintStart_toEndOf="@id/block3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/block2"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.25">

            <com.example.plantpall.SpeedometerView
                android:id="@+id/gauge4"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/progressText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UV"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_gravity="bottom|center_horizontal"/>
        </androidx.cardview.widget.CardView>

        <!-- Weather Section Below 4 Blocks -->
        <LinearLayout
            android:id="@+id/weatherSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/block3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/weatherConditionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather Condition"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingBottom="8dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:background="@android:color/transparent"
                android:elevation="8dp"
                android:gravity="center">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="3"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:padding="8dp"
                    android:columnOrderPreserved="true">

                    <!-- City -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp"
                        android:layout_column="0">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/pin" />

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <!-- Condition -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp"
                        android:layout_column="1">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/condition" />

                        <TextView
                            android:id="@+id/condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Condition"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <!-- Temperature -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp"
                        android:layout_column="0">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/temp" />

                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <!-- Wind -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp"
                        android:layout_column="1">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/wind" />

                        <TextView
                            android:id="@+id/wind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp"
                        android:layout_column="0">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/humidity" />

                        <TextView
                            android:id="@+id/humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <!-- Visibility -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:padding="8dp"
                        android:layout_column="1">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/visibility" />

                        <TextView
                            android:id="@+id/visibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visibility"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                </GridLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>